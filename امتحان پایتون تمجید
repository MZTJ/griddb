#توابع
def cal(a,b,c):
    if c=="+":
        print(a+b)
    elif c=="-":
        print(a-b)
    elif c=="*":
        print(a*b)
    elif c=="/":
        print(a/b)
    else:
        print("invalid")

def mosalas(e,f,g):
    if e<f+g and f<e+g and g<e+f:
        print("masalas hast")
    else:
        print("masalas nist")

def oddeven(h):
    if h%2==0:
        print("zoj")
    else:
        print("fard")

def sum(i,j):
    print(i+j)




#تمرین منو
