print("3)even or odd")
print("4)sum digit number")
print("5)exit")
while d!=5:
    d=int(input('enter select number:'))
    if d==1:
        a=int(input('enter your number:'))
        b=int(input('enter your number:'))
        c=input('enter + - * /:')
        ca=(a,b,c)
        cal(a,b,c)
    elif d==2:
        e=int(input('enter your number:'))
        f=int(input('enter your number:'))
        g=int(input('enter your number:'))
        mos=(e,f,g)
        mosalas(e,f,g)
    elif d==3:
        h=int(input('enter your number:'))
        zofa=(h)
        oddeven(h)
    elif d==4:
        i=int(input('enter your number:'))
        j=int(input('enter your number:'))
        su=(i,j)
        sum(i,j)
    elif d==5:
        print("kharej shod")
    else:
        print("invalid")




#تمرین پیدا کردن شماره تلفن با استفاده از اسم
name=[]
shomare=[]
k=0


for n in range(10):
    name.append(input('enter your name:'))
    shomare.append(int(input('enter your phone number:')))


yourname=input('name mored nazar ra vared konid:')


for n in range(10):
    if yourname==name[n]:
        k=1
        break
    else:
        k=0

if (k==1):
    print(shomare[n])
else:
    print("name eshtebah ast")




