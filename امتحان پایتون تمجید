if q=="shade":
    print("3 istgah mande")
elif q=="daneshgah":
    print("2 istgah mande")
elif q=="tarasht":
    print("1 istgah mande")
elif q=="shadegheh":
    print("shoma be maghsad residid")
else:
    print("invalid")



